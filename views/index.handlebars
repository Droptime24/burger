<h1>Burgers!</h1>

<h2>Eat Da Burger!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}} 
    {{/unless}}
  {{/each}}
</ul>

<h2>Lets Eat</h2>

<ul>
  {{#each bugers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Order a Burger</h2>
<form action="/api/burgers" method="POST" class="create-form">

  <div class="form-group">
    <label for="eat">Burger Name:</label>
    <input type="text" id="eat" name="names">
  </div>

  <div class="form-group">
    <label for="devoured">Devoure</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoure!<br>
    <input type="radio" name="devoured" value="0"> Create
  </div>

  <button type="submit">Add Burger</button>
</form>
