<h1 class="text-center">Eat Da Burger</h1>

<h2 class="text-left">Orders</h2>

<ul>
    {{#each burgers}}
        {{#unless devoured}}
            {{ > burgers/burger-block devoured=true }}
        {{/unless}}
    {{/each}}
</ul>

<div class="container text-right">
    <div class="col-xs-1-12">
        <h2 class="text-right">Devoured Burgers</h2>
        <ul>
            {{#each burgers}}
                {{#if devoured}}
                    {{ > burgers/burger-block devoured=false }}
                {{/if}}
            {{/each}}
        </ul>
    </div>
    </div>

    <h2>Add a Burger</h2>
    <form action="/public/assets/js/burgers.js" class="create-form" method="POST">

        <div class="form-group">
            <label for="ca">Burger Name:</label>
            <input id="ca" name="name" type="text"></div>

            <button type="submit">Add Burger</button>
        </form>
